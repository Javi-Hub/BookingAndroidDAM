<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/rowHotel"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:weightSum="100"
    android:background="@color/row"
    android:padding="5dp"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/imgPhoto"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="35"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_launcher_background" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="65"
        android:weightSum="100"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:fontFamily="@string/font_family"
            android:gravity="center_vertical"
            android:padding="@dimen/row_padding"
            android:text="@string/hotel_name"
            android:textSize="@dimen/header"
            android:textColor="@color/name_hotel"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:fontFamily="@string/font_family"
                android:paddingLeft="@dimen/row_padding"
                android:gravity="center_vertical"
                android:text="@string/hotel_city"
                android:textSize="@dimen/header_"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/Prize"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:fontFamily="@string/font_family"
                android:paddingLeft="@dimen/row_padding"
                android:text="@string/hotel_prize"
                android:textColor="@color/detail_cost"
                android:textSize="@dimen/header_" />

            <TextView
                android:id="@+id/txtPrize"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:fontFamily="@string/font_family"
                android:gravity="center"
                android:paddingLeft="@dimen/row_padding"
                android:textColor="@color/detail_cost"
                android:textSize="@dimen/header_" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:weightSum="100">

            <TextView
                android:id="@+id/txtCategory"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/row_padding"
                android:fontFamily="@string/font_family"
                android:textSize="@dimen/body"
                android:textColor="@color/gold"/>

            <TextView
                android:id="@+id/txtStars"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/row_padding"
                android:fontFamily="@string/font_family"
                android:text="@string/hotel_stars"
                android:textSize="@dimen/body"
                android:textColor="@color/gold"/>

            <TextView
                android:id="@+id/Rate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="35"
                android:fontFamily="@string/font_family"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/row_padding"
                android:text="@string/hotel_rate"
                android:textColor="@color/black"
                android:textSize="@dimen/body" />

            <TextView
                android:id="@+id/txtRate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/row_padding"
                android:fontFamily="@string/font_family"
                android:textSize="@dimen/body"
                android:textColor="@color/black"/>

        </LinearLayout>

     </LinearLayout>

</LinearLayout>